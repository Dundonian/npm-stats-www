doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    meta(name="robots", content="index, follow")
    meta(name="language", content="EN")
    meta(name="author", content="Matteo Figus")
    meta(name="distribution", content="global")
    block head
  body

    a(href="https://github.com/matteofigus/npm-stats-www")
      img(style="position: absolute; top: 0; right: 0; border: 0;", src="https://s3.amazonaws.com/github/ribbons/forkme_right_red_aa0000.png", alt="Fork me on GitHub")

    block content

    div.forms
      div.form-half.forms-border
        p Search for a user in NPM:
        form#user-form
          input.username(type="text", value=username)
          a.submit(href="#") Go

      div.form-half
        p Search for a module in NPM:
        form#repository-form
          input.repositoryname(type="text", value=repository)
          a.submit(href="#") Go

    div.social
      iframe(allowtransparency="true", frameborder="0", scrolling="no", src="//platform.twitter.com/widgets/follow_button.html?screen_name=matteofigus", style="width:230px; height:20px;")
      iframe#gh_badge(src="http://ghbtns.com/github-btn.html?user=matteofigus&repo=npm-stats-www&type=watch&count=true", allowtransparency="true", frameborder="0", scrolling="0", width="110", height="20")
      
    script(type="text/javascript").
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-46846536-1']);
      _gaq.push(['_setDomainName', 'npm-stats.com']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

      var maxPlotsPerPage = 10;

    script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js")
    script(src="/javascripts/templates.js")
    script(src="/javascripts/endpoints.js")
    script(src="/javascripts/search.js")
    script(src="/javascripts/plot.js")
    block scripts
